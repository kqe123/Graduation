<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="@android:color/white" /> <!-- 배경색을 흰색으로 설정 -->
    <stroke
        android:width="1.5dp"
        android:color="#E0E0E0"/> <!-- 테두리 색상과 두께 설정 -->
    <corners android:radius="10dp" /> <!-- 상자 모서리의 반경 설정 -->
    <padding
        android:left="12dp"
        android:right="12dp"
        android:top="4dp"
        android:bottom="4dp"/>
</shape>
