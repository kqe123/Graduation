<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when button is pressed -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#D3D3D3"/> <!-- Light gray background when pressed -->
            <stroke
                android:width="2dp"
                android:color="#000000" /> <!-- Black border -->
            <corners
                android:radius="20dp" /> <!-- Rounded corners -->
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape>
            <solid android:color="#FFFFFF"/> <!-- White background -->
            <stroke
                android:width="2dp"
                android:color="#000000" /> <!-- Black border -->
            <corners
                android:radius="20dp" /> <!-- Rounded corners -->
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
