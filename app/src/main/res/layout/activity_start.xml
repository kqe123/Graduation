<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">
        <ImageView
            android:src="@drawable/titlexl"
            android:contentDescription="titlexl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="top|center">
        <Button
            android:id="@+id/btn_go_login"
            android:layout_width="216dp"
            android:layout_height="69dp"
            android:background="@drawable/loginbtn_shape"
            android:text="LOGIN"
            android:textSize="30dp"
            />



        <Button
            android:id="@+id/btn_go_signup"
            android:background="@drawable/signupbtn_shape"
            android:layout_width="216dp"
            android:layout_height="69dp"
            android:layout_marginTop="20dp"
            android:text="SIGN UP"
            android:textSize="30dp"/>








    </LinearLayout>





</LinearLayout>