<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:src="@drawable/titlexl"
        android:contentDescription="titlexl"
        android:layout_width="317dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"/>

    <TextView
        android:textSize="16sp"
        android:textColor="@color/login_ek3_color"
        android:layout_width="63.6dp"
        android:layout_height="wrap_content"
        android:text="@string/login_ek3_string"
        android:layout_weight="0.3"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="0.2">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textSize="33dp"
                android:textColor="@color/black"
                android:layout_width="62.3dp"
                android:layout_height="51.3dp"
                android:text="@string/id_string"
                />
            <TextView
                android:textSize="13dp"
                android:textColor="@color/black"
                android:layout_width="68.3dp"
                android:layout_height="25.3dp"
                android:layout_marginTop="-15dp"
                android:text="@string/__e_mail__string"
                />
        </LinearLayout>
        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="221dp"
            android:layout_height="41dp"
            android:textSize="15dp"
            android:inputType="textEmailAddress"
            android:hint="아이디를 입력하세요!"
            android:background="@drawable/edit_box"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="0.2">
        <TextView
            android:textSize="32dp"
            android:textColor="@color/login_ek3_color"
            android:layout_width="68.2dp"
            android:layout_height="40dp"
            android:text="@string/pw_string"
            />
        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="221dp"
            android:layout_height="41dp"
            android:textSize="15dp"
            android:inputType="textPassword"
            android:hint="비밀번호를 입력하세요!"
            android:background="@drawable/edit_box"
            />
    </LinearLayout>









    <Button
        android:id="@+id/btnLogin"
        android:background="@drawable/loginbtn2_shape"
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/maruburi"
        android:text="로그인"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"/>
    <TextView android:id="@+id/tv_register"
        android:textSize="15dp"
        android:textColor="@color/douwantjoin2_color"
        android:layout_width="174.5dp"
        android:layout_height="22.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:text="@string/douwantjoin2_string"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"/>







</LinearLayout>